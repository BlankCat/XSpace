<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uniFun.MainActivity">

    <com.uniFun.ui.view.NoScrollViewPage
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/black_alpha_5" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:itemIconTint="#767676"
        app:itemTextColor="#767676"
        app:menu="@menu/nav_bottom_item" />
</LinearLayout>
